{
    "name": "l-html",
    "version": "1.0.3",
    "description": "An HTML Generation Library for Javascript",
    "main": "dist/l.js",
    "scripts": {
        "test": "npm run test-behavior",
        "test-behavior": "mocha --compiler js:babel-core ./test/behavior/",
        "test-performance": "mocha ./test/performance/",
        "build": "webpack --mode=production",
        "watch": "onchange 'src/**/*.js' -- npm run build",
        "dev-watch": "onchange 'src/**/*.js' -- npm run dev-build",
        "dev-build": "webpack --mode=development"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/adambertrandberger/l.git"
    },
    "keywords": [
        "html",
        "generation",
        "l"
    ],
    "author": "Adam Bertrand Berger",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/adambertrandberger/l/issues"
    },
    "homepage": "https://github.com/adambertrandberger/l#readme",
    "devDependencies": {
        "@babel/cli": "^7.4.4",
        "@babel/core": "^7.4.4",
        "@babel/node": "^7.2.2",
        "@babel/plugin-transform-runtime": "^7.4.4",
        "@babel/polyfill": "^7.4.4",
        "@babel/preset-env": "^7.4.4",
        "@babel/runtime": "^7.4.4",
        "babel-loader": "^8.0.6",
        "chai": "^4.2.0",
        "jsdom": "^15.1.0",
        "mocha": "^10.2.0",
        "onchange": "^6.0.0",
        "webpack": "^4.31.0",
        "webpack-cli": "^3.3.2"
    }
}
